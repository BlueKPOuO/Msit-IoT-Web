@model IoTWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "註冊";
}
@section styles
{
    <link href="@Url.Content("~/assets/css/main.css")" rel="stylesheet" />
}
<h2>@ViewBag.Title</h2>

<div id="wrapper">
    <div id="bg"></div>
    <div id="overlay"></div>
    <div id="main">
        <header id="header">
            <div id="loginhandler" style="margin-top:7% ;text-align:center">
                <div class="row register" style="width:40%">
                    @{
                        if (String.IsNullOrEmpty(ViewBag.errorMessage))
                        {

                        }
                        else
                        {
                            <h2 class="text-danger">@ViewBag.errorMessage</h2>
                        }
                    }
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>建立住戶的帳戶</h4>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ResidentCode, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.ResidentCode, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ResidentCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-offset-5 col-md-1">
                                    <input type="submit" class="btn btn-default" value="註冊" />
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-success" id="Demo" name="Demo">Demo</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </header>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#Demo').click(function () {
            $('#Username').val('Msit123002');
            $('#Email').val('lunch12337@@gmail.com');
            $('#Password').val('Msit123@@');
            $('#ConfirmPassword').val('Msit123@@');
            $('#ResidentCode').val('F129427258');
        });
    </script>
}
