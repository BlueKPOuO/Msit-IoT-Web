@model IoTWeb.Models.IndexViewModel
@using Microsoft.AspNet.Identity
@if (Model.Headimg != null)
{
    <img src="@Url.Action("ShowPhoto", "Manage", new { id = User.Identity.GetUserName() })" style="width:320px;height:240px" />
}
else
{
    <img src="~/img/head.png" style="width:320px;height:240px" />
}
