@model IEnumerable<IoTWeb.Models.ReturnPackage>

@{
    ViewBag.Title = "檢視退貨";
}
@section styles
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
}

    <div style="text-align:center">
        <div class="alert alert-success">
            <h1 style="font-family: DFKai-sb" ;>退貨包裹資訊</h1>
        </div>
        <div>
            <a href="@Url.Action("Index2","ReturnPackages",new {} )" class="btn btn-success"><i class="fa fa-plus" style="text-align:right"></i>歷史紀錄</a>
            <a href="@Url.Action("Index","ReturnPackages",new {} )" class="btn btn-success"><i class="fa fa-plus" style="text-align:right"></i>未收走退件</a>
        </div>
    </div>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <table id="DataTable" class="table display">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ReturnDataID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReturnArrivalDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ResidentDataTable.ResidentName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PackageCompany.CompanyName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StaffID)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.Sign)
                          </th>*@
                        @*<th></th>*@
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDataID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnArrivalDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResidentDataTable.ResidentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PackageCompany.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffID)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Sign)
                            </td>*@
                        @*<td>
                                @Html.ActionLink("詳細資料", "Details", new { id = item.ReturnDataID }, new { @class = "btn btn-info" })
                            </td>*@
                    </tr>
                }

            </table>
        </div>

    </div>
</div>


    @section scripts
{
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
        <script>
            $("#DataTable").DataTable({
                searching: false, //關閉filter功能
                columnDefs: [{
                    targets: [3],
                    orderable: false,
                }],
                "language": {
                    "emptyTable": "無資料...",
                    "processing": "處理中...",
                    "loadingRecords": "載入中...",
                    "lengthMenu": "顯示 _MENU_ 項結果",
                    "zeroRecords": "沒有符合的結果",
                    "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                    "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                    "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                    "infoPostFix": "",
                    "search": "搜尋:",
                    "paginate": {
                        "first": "第一頁",
                        "previous": "上一頁",
                        "next": "下一頁",
                        "last": "最後一頁"
                    },
                    "aria": {
                        "sortAscending": ": 升冪排列",
                        "sortDescending": ": 降冪排列"
                    }
                }
            });
        </script>
    }
