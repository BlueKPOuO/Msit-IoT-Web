@*@model IoTWeb.Models.PackageTable*@
@model IEnumerable<IoTWeb.Models.PackageTable>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
}

<div style="text-align:center">
    <div class="alert alert-success">
        <h1 style="font-family: DFKai-sb" ;>包裹歷史紀錄</h1>
    </div>
    <div>
        <a href="@Url.Action("Index2","PackageTables",new {} )" class="btn btn-success"><i class="fa fa-plus" style="text-align:right"></i>歷史紀錄</a>
        <a href="@Url.Action("Index","PackageTables",new {} )" class="btn btn-success"><i class="fa fa-plus" style="text-align:right"></i>未簽收包裹</a>
    </div>
</div>
<div class="container">
    <div class="row">
        <table id="DataTable" class="table display">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PackageID)
                    </th>
                    <th>
                            @Html.DisplayNameFor(model => model.PackageArrivalDate)
                        </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResidentDataTable.ResidentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PackageCompany.CompanyName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.StaffDataTable.StaffName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SignedDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackageID)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.PackageArrivalDate)
                        </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResidentDataTable.ResidentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackageCompany.CompanyName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.StaffDataTable.StaffName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SignedDate)
                    </td>             
                </tr>
            }
        </table>

    </div>
</div>



@section scripts
{
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script>
        $("#DataTable").DataTable({
            searching: false, //關閉filter功能
            columnDefs: [{
                targets: [3],
                orderable: false,
            }]
        });
    </script>
}
