{

    @*<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>*@
    @* <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>*@
    @*<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>*@
    
    <script type="text/javascript" src="~/AdminStyle/vendor/datatables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/AdminStyle/vendor/datatables/dataTables.bootstrap4.js"></script>
    @*<script type="text/javascript" src="~/AdminStyle/vendor/datatables/dataTables.bootstrap4.css"></script>*@
    @*<script type="text/javascript" src="~/AdminStyle/vendor/jquery-easing/jquery.easing.min.js"></script>*@
    @*<script type="text/javascript" src="~/AdminStyle/vendor/jquery/jquery.min.js"></script>*@

    <script>
        $(document).ready(function () {
            $('#tableEQ').dataTable({
                language: {
                    url: "@Url.Content("~/Scripts/Chinese-traditional.json")"
                },
                searching: false,
                "lengthMenu": [[10, 20, 50, -1], [10, 20, 50, "全部"]],
            });
        });
    </script>
}
