                        @Html.DropDownList("ReturnCompanyID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ReturnCompanyID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Returnee, htmlAttributes: new { @class = "control-label col-md-2" })
