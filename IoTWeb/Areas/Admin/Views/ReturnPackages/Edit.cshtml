@model IoTWeb.Models.ReturnPackage

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
        <h2><span class="badge badge-info">收取退貨</span></h2>

        @using (Html.BeginForm())
