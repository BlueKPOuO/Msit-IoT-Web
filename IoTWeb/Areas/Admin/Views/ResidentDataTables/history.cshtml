@model IEnumerable<IoTWeb.Models.ResidentDataTable>

@{
    ViewBag.Title = "history";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="alert alert-success" style="text-align:center;line-height:normal">
    <h2 style="font-weight:bold">住戶管理</h2>
</div>

<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","ResidentDataTables",new { area="Admin" })" id="">當前住戶</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Action("history","ResidentDataTables",new { area="Admin" })" id="history">歷史紀錄</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered" id="history">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ResidentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResidentPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResidentIDNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CommunityAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Living)
                    </th>
                </tr>

            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResidentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResidentPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResidentIDNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommunityAddress)
                    </td>
                    <td>
                        已搬離
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

