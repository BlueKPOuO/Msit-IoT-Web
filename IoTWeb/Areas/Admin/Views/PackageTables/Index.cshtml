@model IEnumerable<IoTWeb.Models.PackageTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="text-align:center">
    <h1><span class="badge badge-dark">包裹收貨系統</span> </h1>
</div>
<div>
    <a href="@Url.Action("Create","PackageTables",new {} )" class="btn btn-success"><i class="fa fa-calendar-plus-o"></i>新增包裹</a>
    <a href="@Url.Action("Index2","PackageTables",new {} )" class="btn btn-success"><i class="fa fa-folder-open"></i>歷史紀錄</a>
    <a href="@Url.Action("Index","PackageTables",new {} )" class="btn btn-success"><i class="fa fa-calendar-check-o"></i>未領取包裹</a>
</div>

<table class="table" id="PackageTables">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackageID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageArrivalDate)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.ResidentDataTable.ResidentID)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ResidentDataTable.ResidentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageCompany.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffDataTable.StaffName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Sign)
            </th>*@
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageArrivalDate)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ResidentDataTable.ResidentID)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ResidentDataTable.ResidentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageCompany.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffDataTable.StaffName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Sign)
                </td>*@
                <td>                    
                    <a href="@Url.Action("Edit","PackageTables",new {id = item.PackageID  } )" class="btn btn-info"><i class="fa fa-pencil-square-o"></i>領取包裹</a>||
                    <a href="@Url.Action("Delete","PackageTables",new {id = item.PackageID  } )" class="btn btn-danger"><i class="fa fa-trash-o"></i>刪除</a>
                </td>
                
            </tr>
        }
    </tbody>    
</table>
@section scripts
{
            <script>

                $(document).ready(function () {
                    $('#PackageTables').DataTable();
                });
                $('#PackageTables').dataTable({
                    "language": {
                        "emptyTable": "無資料...",
                        "processing": "處理中...",
                        "loadingRecords": "載入中...",
                        "lengthMenu": "顯示 _MENU_ 項結果",
                        "zeroRecords": "沒有符合的結果",
                        "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                        "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                        "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                        "infoPostFix": "",
                        "search": "搜尋:",
                        "paginate": {
                            "first": "第一頁",
                            "previous": "上一頁",
                            "next": "下一頁",
                            "last": "最後一頁"
                        },
                        "aria": {
                            "sortAscending": ": 升冪排列",
                            "sortDescending": ": 降冪排列"
                        }
                    }                })
            </script>
        }
