@model IEnumerable<IoTWeb.Models.PublicSpace>

@{
    ViewBag.Title = "Index2";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 align="center">歷史資料</h2>

<a href="@Url.Action("Index","Locations",new { })" class="btn btn-info btn-lg">
    <i class="fa fa-home"></i>回到首頁
</a>

@using (Html.BeginForm())
{
    <p align="right">
        地方：@Html.DropDownList("Plist", "全部")
        搜尋：@Html.TextBox("Findeq", null, null, new { placeholder = "請填入借用人名稱" })
        <input type="submit" value="查詢" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.barrierName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimeNow)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.Location1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResidentDataTable.ResidentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StaffDataTable.StaffName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.barrierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateTimeNow)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Location.Location1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidentDataTable.ResidentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffDataTable.StaffName)
            </td>
            <td>
                @*  @Html.ActionLink("Edit", "Edit", new { id=item.seq }) |*@
                @*@Html.ActionLink("詳細資料", "Details", new { id = item.seq }, new { @class = "btn btn-primary" })*@
                <a href="@Url.Action("Details","PublicSpaces",new { id = item.seq })" class="btn btn-info btn-lg">
                    <i class="fa fa-th-list"></i>詳細資料
                </a>
                @*  @Html.ActionLink("Delete", "Delete", new { id=item.seq })*@
            </td>
        </tr>
    }

</table>
