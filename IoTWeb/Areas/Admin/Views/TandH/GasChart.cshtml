
@{
    ViewBag.Title = "瓦斯圖表";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2>瓦斯圖表</h2>
    <div class="row">
        <div class="col-sm-3">
            展示方法:
            <select class="custom-select" name="Method1">
                <option selected="selected">請選擇</option>
                <option>選擇範圍</option>
                <option>指定間距</option>
            </select>
        </div>
        <div class="col-sm-3">時間1:<div id="time1"></div></div>

        <div class="col-sm-3" hidden="hidden">時間2:<div id="time2"></div></div>
        <div class="col-sm-3" hidden="hidden">間距:<div id="time2"></div></div>
    </div>

</div>
<div id="GAScontainer" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
@section scripts{
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>

    <script>
        Highcharts.getJSON('@Url.Action("GasDataY", "TandH", new { Area = "Admin" })', function (dataY) {
            Highcharts.getJSON('@Url.Action("GasDateX", "TandH", new { Area = "Admin" })', function (dataX) {
                Highcharts.chart('GAScontainer', {
                    chart: {
                        type: 'line'
                    },
                    title: {
                        text: 'Gas concentration chart'
                    },
                    subtitle: {
                        text: '過去一小時'
                    },
                    xAxis: {
                        //categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                        categories: dataX
                    },
                    yAxis: {
                        title: {
                            text: 'Gas (ppm)'
                        }
                    },
                    plotOptions: {
                        line: {
                            dataLabels: {
                                enabled: true
                            },
                            enableMouseTracking: false
                        }
                    },
                    series: [{
                        name: '大廳',
                        //data: [7.0, 6.9, 9.5, 14.5, 18.4, 21.5, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6]
                        data: dataY
                    }/*, {
                    name: 'London',
                    data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
                }*/]
                });
            });
        });

        $(document).ready(function () {
            //Highcharts.getJSON()
        });
    </script>
}