@{
    ViewBag.Title = "環境資訊";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<a href="@Url.Action("GasChart","TandH",new {Area = "Admin" })"><div id="GAScontainer" style="min-width: 310px; height: 400px; margin: 0 auto"></div></a>
@section scripts
    {
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script>
        /**/
        Highcharts.getJSON('https://cdn.jsdelivr.net/gh/highcharts/highcharts@v7.0.0/samples/data/usdeur.json', function (data) {
            /**/
            console.log(data);
            Highcharts.chart('container', {
                chart: {
                    zoomType: 'x'
                },
                title: {
                    text: 'USD to EUR exchange rate over time'
                },
                subtitle: {
                    text: document.ontouchstart === undefined ?
                        'Click and drag in the plot area to zoom in' : 'Pinch the chart to zoom in'
                },
                xAxis: {
                    type: 'datetime'
                },
                yAxis: {
                    title: {
                        text: 'Exchange rate'
                    }
                },
                legend: {
                    enabled: false
                },
                plotOptions: {
                    area: {
                        fillColor: {
                            linearGradient: {
                                x1: 0,
                                y1: 0,
                                x2: 0,
                                y2: 100
                            },
                            stops: [
                                [0, Highcharts.getOptions().colors[0]],
                                [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                            ]
                        },
                        marker: {
                            radius: 2
                        },
                        lineWidth: 1,
                        states: {
                            hover: {
                                lineWidth: 1
                            }
                        },
                        threshold: null
                    }
                },
                series: [{
                    type: 'area',
                    name: 'USD to EUR',
                    data: data,
                    turboThreshold: 5000
                }]
            });
        });


        Highcharts.getJSON('@Url.Action("GasDataY", "TandH", new { Area = "Admin" })', function (dataY) {
            Highcharts.getJSON('@Url.Action("GasDateX", "TandH", new { Area = "Admin" })', function (dataX) {
                Highcharts.chart('GAScontainer', {
                    chart: {
                        type: 'line'
                    },
                    title: {
                        text: 'Gas concentration chart'
                    },
                    subtitle: {
                        text: '過去一小時'
                    },
                    xAxis: {
                        //categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                        categories: dataX
                    },
                    yAxis: {
                        title: {
                            text: 'Gas (ppm)'
                        }
                    },
                    plotOptions: {
                        line: {
                            dataLabels: {
                                enabled: true
                            },
                            enableMouseTracking: false
                        }
                    },
                    series: [{
                        name: '大廳',
                        //data: [7.0, 6.9, 9.5, 14.5, 18.4, 21.5, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6]
                        data: dataY
                    }/*, {
                    name: 'London',
                    data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
                }*/]
                });
            });
        });

    </script>
}