<div class="linkwhere">
    <h2>設備</h2>
    @Html.ActionLink("新增設備", "Create", null, new { @class = "btn btn-outline-success" })
    @Html.ActionLink("審核預約", "Index", "EquipReservations", null, new { @class = "btn btn-outline-warning" })
    @Html.ActionLink("審核維修", "Index", "EquipFixes", null, new { @class = "btn btn-outline-danger" })

    @using (Html.BeginForm())
    {       
        <p>
            地方：@Html.DropDownList("Plist", "全部")
            搜尋；@Html.TextBox("Pname")
            <input type="submit" value="查詢" />
        </p>
    }   
</div>

<table class="table" id="table1">
    <tr>
        <th width="30%"></th>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentName)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Vendor)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Buydate)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.UseYear)
        </th>
        <th width="10%"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Create","EquipReservations",new {id = item.EquipmentID })" class="btn btn-primary">預約設備</a>
                <a href="@Url.Action("Create","EquipFixes",new {id = item.EquipmentID })" class="btn btn-danger">報修</a>
                <a href="@Url.Action("Edit","Equipments",new {id = item.EquipmentID })" class="btn btn-info">修改</a>
                <a href="@Url.Action("Details","Equipments",new {id = item.EquipmentID })" class="btn btn-info">詳細資料</a>
                <a href="@Url.Action("Delete","Equipments",new {id = item.EquipmentID })" class="btn btn-info">刪除</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Buydate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UseYear)
            </td>
        </tr>
    }
</table>

