@model IEnumerable<IoTWeb.Models.StaffDataTable>

@{
    ViewBag.Title = "保全管理";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section styles{ 
    <style>

    </style>
}
    <div class="">
        <h2>全部保全名單(包含離職)</h2>
        <p>
            @Html.ActionLink("顯示在職保全名單", "Index", new { Area = "Admin" }, new { @class = "btn btn-success" })
            @Html.ActionLink("新增保全人員", "Create", null, new { @class = "btn btn-secondary" })
        </p>
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EntryDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffPhone)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.StaffLINE_ID)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.OnWork)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.img)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShiftTable.ShiftID)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem =>item.StaffID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EntryDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffPhone)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.StaffLINE_ID)
                        </td>*@
                        <td>
                            @*@Html.DisplayFor(modelItem => item.OnWork)*@
                            @if (item.OnWork)
                            {
                                @:在職
                            }
                            else
                            {
                                @:離職
                            }
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.img)*@
                            @Html.Partial("_ShowStaffPhotoPartial", item)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShiftTable.ShiftID)
                        </td>
                        <td>
                            @Html.ActionLink("編輯", "Edit", new { id = item.StaffID }, new { @class = "btn btn-warning" }) <br />
                            @Html.ActionLink("詳細", "Details", new { id = item.StaffID }, new { @class = "btn btn-info" }) <br />
                            @*@Html.ActionLink("刪除", "Delete", new { id = item.StaffID }, new { @class = "btn btn-danger" })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "language": {
                    "emptyTable": "無資料...",
                    "processing": "處理中...",
                    "loadingRecords": "載入中...",
                    "lengthMenu": "顯示 _MENU_ 項結果",
                    "zeroRecords": "沒有符合的結果",
                    "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                    "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                    "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                    "infoPostFix": "",
                    "search": "搜尋:",
                    "paginate": {
                        "first": "第一頁",
                        "previous": "上一頁",
                        "next": "下一頁",
                        "last": "最後一頁"
                    },
                    "aria": {
                        "sortAscending": ": 升冪排列",
                        "sortDescending": ": 降冪排列"
                    }
                }
            });
        });
        $('#PackageTables').dataTable({
            "language": {
                "emptyTable": "無資料...",
                "processing": "處理中...",
                "loadingRecords": "載入中...",
                "lengthMenu": "顯示 _MENU_ 項結果",
                "zeroRecords": "沒有符合的結果",
                "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                "infoPostFix": "",
                "search": "搜尋:",
                "paginate": {
                    "first": "第一頁",
                    "previous": "上一頁",
                    "next": "下一頁",
                    "last": "最後一頁"
                },
                "aria": {
                    "sortAscending": ": 升冪排列",
                    "sortDescending": ": 降冪排列"
                }
            }
        })
    </script>
}