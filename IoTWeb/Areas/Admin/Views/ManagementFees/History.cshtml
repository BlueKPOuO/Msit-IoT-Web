@model IEnumerable<IoTWeb.Models.ManagementFee>

@{
    ViewBag.Title = "History";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="alert alert-success" style="text-align:center;line-height:normal">
    <h2 style="font-weight:bold">管理費-歷史紀錄</h2>
</div>


<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","ManagementFees",new { area="Admin" })">未繳費</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Action("history","ManagementFees",new { area="Admin" })">歷史紀錄</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <table id="history" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ResidentDataTable.ResidentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Month)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaidDate)
                    </th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
            <tr style="font-size:large">
                <td>
                    @Html.DisplayFor(modelItem => item.ResidentDataTable.ResidentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Month)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaidDate)
                </td>
            </tr>
            }
        </table>
    </div>
</div>

@section scripts
    {
    <script>
         $(document).ready(function () {
             $("#history").dataTable({
                 columndefs: [{ targets: 5, 'sortable': false }],
                 "language": {
                     "emptyTable": "無資料...",
                     "processing": "處理中...",
                     "loadingRecords": "載入中...",
                     "lengthMenu": "顯示 _MENU_ 項結果",
                     "zeroRecords": "沒有符合的結果",
                     "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                     "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                     "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                     "infoPostFix": "",
                     "search": "搜尋:",
                     "paginate": {
                         "first": "第一頁",
                         "previous": "上一頁",
                         "next": "下一頁",
                         "last": "最後一頁"
                     },
                     "aria": {
                         "sortAscending": ": 升冪排列",
                         "sortDescending": ": 降冪排列"
                     }
                 }
            });
         })
    </script>
    }