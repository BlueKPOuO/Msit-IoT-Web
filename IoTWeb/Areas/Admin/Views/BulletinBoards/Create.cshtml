        <div class="form-group">
            @Html.LabelFor(model => model.annGrade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("annGrade", (IEnumerable<SelectListItem>)ViewBag.GradeList, new { @class = "form-control" })
