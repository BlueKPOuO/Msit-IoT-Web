@model IEnumerable<IoTWeb.Models.BulletinBoard>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create","BulletinBoards",new { area="Admin" })" class="btn btn-success"><i class="fa fa-plus"></i> 新增公告</a>
</p>
<table class="table table-striped table-bordered" id="datatable">
    <thead>
        <tr>
            <th style="width:8%">
                @Html.DisplayNameFor(model => model.annGrade)
            </th>
            <th style="width:8%">
                @Html.DisplayNameFor(model => model.annClass)
            </th>
            <th style="width:8%">
                @Html.DisplayNameFor(model => model.annDate)
            </th>
            <th style="width:8%">
                @Html.DisplayNameFor(model => model.annTitle)
            </th>
            <th style="width:40%">
                @Html.DisplayNameFor(model => model.annContent)
            </th>
            <th style="width:8%">
                @Html.DisplayNameFor(model => model.annAnnex)
            </th>
            <th style="width:8%">
                @Html.DisplayNameFor(model => model.StaffDataTable.StaffName)
            </th>
            <th style="width:12%">

            </th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.annGrade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.annClass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.annDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.annTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.annContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.annAnnex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StaffDataTable.StaffName)
        </td>
        <td>
            <a href="@Url.Action("Edit","BulletinBoards",new { id=item.annID})" class="btn btn-info"><i class="fa fa-pencil-square-o"></i> 修改</a> |
            <a href="@Url.Action("Delete","BulletinBoards",new { id=item.annID})" class="btn btn-warning"><i class="fa fa-trash-o"></i> 刪除</a>
        </td>
    </tr>
}

</table>

@section scripts
    {
        <script>
            $(document).ready(function () {
                $("#datatable").datatable();
            })
        </script>
    }