@model IEnumerable<IoTWeb.Models.EquipReservation>

@{
    ViewBag.Title = "審核預約";
}
<div class="linkwhere">
    <h2><b>審核預約</b></h2>
</div>
<p>
    @Html.ActionLink("歷史審核預約", "EqrHistory", null, null, new { @class = "btn btn-danger" })
</p>
<table class="table table-striped table-bordered" id="tableEQ">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReservationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment.EquipmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResidentDataTable.ResidentName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationDate, "MyDate")

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipment.EquipmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidentDataTable.ResidentName)
            </td>
            
            <td>
                @Html.ActionLink("審核預約", "Edit", new { id = item.EquipReservationID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("詳細資料", "Details", new { id = item.EquipReservationID }, new { @class = "btn btn-info" })                

            </td>
        </tr>
    }

</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#tableEQ').DataTable({
                language: {
                    url: "@Url.Content("~/Scripts/Chinese-traditional.json")"
                },
                searching: false,
                "lengthMenu": [[10, 20, 50, -1], [10, 20, 50, "全部"]],
            });
        });
    </script>
}